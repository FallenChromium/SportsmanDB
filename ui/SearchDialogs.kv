<SearchInput>
    id: input_field
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

<NameAndSportInput>
    MDTextField:
        hint_text: "Name"
        id: fullname

    MDTextField:
        hint_text: "Sport Type"
        id: sport
        on_focus: if self.focus: root.sport_dropdown.open()

<NameAndRankInput>
    MDTextField:
        hint_text: "Name"
        id: fullname

    MDTextField:
        hint_text: "Rank"
        id: rank
        on_focus: if self.focus: root.rank_dropdown.open()


<TitlesAmountInput>
    MDTextField:
        hint_text: "Min"
        id: min_titles

    MDTextField:
        hint_text: "Max"
        id: max_titles
